.col-md-9(ng-controller="tmMenuItemDetailCtrl as vm")
    .well
        form.form-horizontal(name="vm.menuItemDetailForm")
            fieldset
                legend Menu Item Detail
                .form-group
                    label.col-md-2.control-label(for="name") Name
                    .col-md-10
                        input.form-control(name="name", type="text", placeholder="Name", ng-model="vm.menuItem.name", required)
                .form-group
                    label.col-md-2.control-label(for="description") Description
                    .col-md-10
                        textarea.form-control(name="description", rows="5", placeholder="Description", ng-model="vm.menuItem.description", required)
                .form-group
                    label.col-md-2.control-label(for="category") Categories
                    .col-md-10
                        p.form-control-static {{vm.menuItem.category}}
                        //input.form-control(name="category", type="text", placeholder="Category", ng-model="vm.menuItem.category", required)
                .form-group
                    label.col-md-2.control-label(for="selectCategory") Add Category
                    .col-md-10
                        select.form-control(name="selectCategory",ng-model="vm.tagSelect", ng-options="item as item for item in vm.miTagList[0].menuItemTags" ng-change="vm.addTag(vm.tagSelect)")
                .form-group
                    label.col-md-10.col-md-offset-2
                        .pull-right
                            // this button is active if the form is valid and dirty
                            button.btn.btn-primary(ng-click="vm.submitMenuItem()", ng-disabled="vm.menuItemDetailForm.$invalid || vm.menuItemDetailForm.$pristine") Submit
                            | &nbsp;
                            //if form is pristine then we allow back without warning
                            // else we fire the rootScope back method in app.js
                            a.btn.btn-default(ng-click="back(vm.menuItemDetailForm.$pristine)") Back
                            //a.btn.btn-default(ng-click="vm.close()") Close

.col-md-3
    legend Selectors
